<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/space_130"
    android:layout_height="@dimen/space_130"
    android:background="@drawable/bg_loading_dialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_view_label_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/dialog_trip_notification_loading_indicator"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/space_80"
        android:layout_height="@dimen/space_80"
        android:layout_marginTop="@dimen/space_8"
        android:visibility="visible"
        app:indicatorColor="@color/common_loading_view_color_loading_indicator"
        app:indicatorName="PacmanIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
